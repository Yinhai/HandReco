# -*- coding: cp936 -*-

import Image,ImageFilter

im = Image.open("down.png")
print im.format, im.size, im.mode

width, height = im.size
im = im.convert('L')

im= im.point(lambda i: 0 if i <= 100 else 255)

wordLengh = 4
characterWidth = width / wordLengh

segments = [((i + 1) * characterWidth, 0, (i+1) * characterWidth + 2, height) for i in range(wordLengh)]

for segment in segments:
    region = im.crop(segment)
    region = region.point(lambda i: 0)
    im.paste(region, segment)
im.show()
    
